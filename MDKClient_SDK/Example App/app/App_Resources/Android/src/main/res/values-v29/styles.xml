<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
  <style name="MDKAppTheme" parent="FioriTheme">
        <item name="android:actionMenuTextColor">@android:color/white</item>
        <item name="android:statusBarColor">@color/sap_ui_page_footer_background</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="searchViewStyle">@style/MDKSearchViewStyle</item>
        <item name="toolbarStyle">@style/MDKActionbarStyle</item>
        <item name="actionBarStyle">@style/MDKActionbarStyle</item>
        <!-- Example on how to override a Fiori style
        <item name="objectCellStyle">@style/MDKObjectCell</item>
        -->
    </style>
    <style name="MDKSearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="searchHintIcon">@null</item>
    </style>
    <style name="MDKActionbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/MDKAppBarColor</item>
        <item name="titleTextColor">@color/MDKAppBarTitleColor</item>
        <item name="android:paddingRight">@dimen/design_app_bar_right_padding</item>
        <item name="contentInsetStart">0dp</item>
        <!-- Remove contentInsetStart, we control left spacing via setTitleMargin in MDKPage -->
        <!-- Also, by default styling, "android:paddingLeft/Right" is 0dp on phone, 8dp on tablet" -->
    </style>
</resources>